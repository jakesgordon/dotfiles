[
  {
    "context": "Workspace",
    "bindings": {
      // "shift shift": "file_finder::Toggle"
    }
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "|": "pane::SplitRight",
      "_": "pane::SplitDown",
      "ctrl-s": "workspace::Save",
      "ctrl-x": "pane::CloseActiveItem",
      "ctrl-q": "zed::Quit",
      "\\ t": "file_finder::Toggle",
      "\\ f": "project_panel::ToggleFocus",
      "\\ a": "pane::DeploySearch"
    }
  }
]
